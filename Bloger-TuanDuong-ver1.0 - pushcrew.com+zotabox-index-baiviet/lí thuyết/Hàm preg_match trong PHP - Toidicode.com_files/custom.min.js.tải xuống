function showMucluc(){var a=$(".main-box-single h2");if(a.length>1){var t='<div class="toc"><p style="color: #F09217;font-weight: bold;">Mục Lục</p><ul>';$.each(a,function(a,i){t+='<li class="list-goto-'+a+'"><i class="fa-icon-double-angle-right" style="" data-color="" data-color_hover="" data-bg="" data-bg_hover=""></i><a href="'+location.href+"#load-h2-"+a+'" data-g="load-h2-'+a+'">'+$(i).text()+"</a></li>"}),t+="</ul></div>";var i=$(".main-box-single h2");$(i[0]).before(t);for(var o=$(".main-box-single h3"),n=new Array,e=0;e<o.length;e++){$(o[e]).attr("id","load-h3-"+e);var l=$(o[e]).prevAll("h2");l.length<1&&(l=$(o[e]).parent().prevAll("h2"));var r=parseInt($(l[0]).attr("data-index"));n[r]||(n[r]=[]),n[r].push(o[e])}$.each(n,function(a,t){if(t){for(var i="",o=0;o<t.length;o++){var n=$(t[o]).text().replace(/[\u00A0-\u9999<>\&]/gim,function(a){return"&#"+a.charCodeAt(0)+";"});i+='<li><a href="javascript:void(0)" data-g="'+$(t[o]).attr("id")+'">'+n+"</a></li>"}""!=i&&(i="<ul >"+i+"</ul>",$(".list-goto-"+a).append(i))}}),$(".toc a").click(function(){var a=$(this).attr("data-g");return $("body, html").animate({scrollTop:$("#"+a).offset().top-80},800),!1})}}function loadHeading(){var a=$(".main-box-single h2"),t=$(".main-box-single h3");$.each(a,function(a){$(this).attr("data-index",a),$(this).attr("id","load-h2-"+a)}),$.each(t,function(a){$(this).attr("id","load-h2-"+a)})}if($(".main-box-single h2").length>=3){var ads='<p style="text-align:center;margin-top:20px;margin-bottom:20px">\x3c!-- bai-viet --\x3e <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-8768260344279113" data-ad-slot="2157340583" data-ad-format="auto"></ins><script>$(document).ready(function () { (adsbygoogle = window.adsbygoogle || []).push({}); })<\/script></p>',h2=$(".main-box-single h2");$(h2[0]).first().after(ads),$(h2[1]).first().after(ads)}var addCurrentLink=function(){$(".list-news ul li a").each(function(a){$(this).attr("href")==window.location.href&&$(this).parents().ad